<html>
    <head>
        <title>
            <%= title %>

        </title>

        <script src="https://kit.fontawesome.com/fa9b83bd0a.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>

        <div id="main-space">
            <h1 id="page-heading"> My TODO List </h1>

            <form id="create-task-form" action="/create-task" method="POST">
                <div id="description-input">
                    <label for="task-description"> DESCRIBE THE TASK: </label>
                    <input type="text" name="description" placeholder="Enter the task" id="task-description" required>
                </div>

                <div id="category-input">
                    <label for="task-category"> CATEGORY: </label>
                    <select name="category" id="task-category">   
                        <option value=""> Choose a Description </option>
                        <option value="Personal"> Personal </option>
                        <option value="Work"> Work </option>
                        <option value="School"> School </option>
                        <option value="Cleaning"> Cleaning </option>
                        <option value="Other"> Other </option>
                    </select>
                </div>
                
                <div id="duedate-input">
                    <label for="task-duedate"> DUE DATE: </label>
                    <input type="date" name="duedate" id="task-duedate">
                </div>
                    
                <button type="submit" id="add-button"> <i class="fa-solid fa-plus"></i> ADD TASK </button>
                
                
                <div class="delete-button">
                    <a href="/delete-tasks">
                        <i class="fa-solid fa-trash-can"></i> DELETE TASKS
                    </a>

                    <p> *select the tasks to be deleted </p>
                </div>
                
            </form>
            
            <div id="tasks-container">
                <ul>
                    <% for (let i of tasks_list) { %>
                        <li class="task">
                            <div class="details">
                                <div id="description-box">
                                    <input type="checkbox" id="task-check">
                                    <p id="details-description"> <%= i.description %> </p>
                                </div>
                                    
                                <div id="duedate-category-box">
                                    <p id="details-duedate"> <i class="fa-regular fa-calendar-days"></i> <%= i.duedate %> </p>
                                    <p id="details-category" data-value="<%= i.category %>"> <%= i.category %> </p>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>

        </div>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>